<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Shoppan" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryContainer">@color/blue_primary</item>
        <item name="colorSecondary">@color/blue_secondary</item>
    </style>

    <style name="Theme.Shoppan" parent="Base.Theme.Shoppan" />

    <style name="TextHeader.22" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/nunito</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">@dimen/_22ssp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="TextTitle.20" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/nunito</item>
        <item name="fontWeight">700</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextFooter.15" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/nunito</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textColor">@color/blue_secondary</item>
    </style>

    <style name="TextFooter.12" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/nunito</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextDescription.14" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/nunito</item>
        <item name="fontWeight">600</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomCardView" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceCustomCorner</item>
    </style>
    
    <style name="ShapeAppearanceCustomCorner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/_20sdp</item>
        <item name="cornerSizeTopRight">@dimen/_20sdp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="CustomFAB" parent="ShapeAppearanceOverlay.Material3.FloatingActionButton">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/_50sdp</item>
        <item name="cornerSizeTopRight">@dimen/_50sdp</item>
        <item name="cornerSizeBottomLeft">@dimen/_50sdp</item>
        <item name="cornerSizeBottomRight">@dimen/_50sdp</item>
    </style>

    
</resources>